      <TextField fx:id="txtSearch" layoutX="370.0" layoutY="569.0" prefHeight="26.0" prefWidth="260.0" promptText="Enter the delete task" />
      <Button layoutX="483.0" layoutY="611.0" mnemonicParsing="false" onAction="#deleteBtnOnaction" prefHeight="26.0" prefWidth="134.0" style="-fx-background-color: red;" text="Delete Task" textFill="WHITE" />
   </children>
</AnchorPane>
