   <children>
      <ImageView fitHeight="659.0" fitWidth="659.0" opacity="0.63" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/image%20for%20a%20todo%20app.png" />
         </image>
      </ImageView>
      <Label alignment="CENTER" layoutX="-1.0" layoutY="-1.0" prefHeight="80.0" prefWidth="659.0" text="TODO" textFill="#001bb1">
         <font>
            <Font name="Calisto MT Bold" size="60.0" />
         </font>
      </Label>
      <ListView fx:id="viewList" layoutX="97.0" layoutY="79.0" opacity="0.76" prefHeight="414.0" prefWidth="462.0" />
      <TextField fx:id="txtAddTask" layoutX="40.0" layoutY="520.0" prefHeight="26.0" prefWidth="260.0" promptText="Add Task" />
      <Button layoutX="72.0" layoutY="611.0" mnemonicParsing="false" onAction="#addBtnOnAction" prefHeight="26.0" prefWidth="82.0" style="-fx-background-color: #001bb1;" text="ADD" textFill="WHITE" />
